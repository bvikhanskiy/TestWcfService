<Window x:Class="GClient.AddInventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GClient"
        mc:Ignorable="d"
        Title="AddInventoryWindow" Height="166.843" Width="544.492">
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="108"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="123,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="384"/>
        <Label Content="Price:" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Width="108"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Left" Height="23" Margin="123,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="384"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="123,86,0,0" VerticalAlignment="Top" Width="75" Click="BtnAdd_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="335,86,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" Click="Button_Click"/>

    </Grid>
</Window>
